# .env.staging.example - Staging Environment Configuration
# Copy this file to .env.staging and fill in your staging credentials

# ========================================
# TYPESENSE - STAGING CLUSTER
# ========================================
# Get these from Typesense Cloud dashboard
# https://cloud.typesense.org/ → Your staging cluster
TYPESENSE_API_KEY=your_staging_api_key_here
TYPESENSE_HOST=staging-xxxxx.a1.typesense.net
TYPESENSE_PORT=443
TYPESENSE_PROTOCOL=https

# ========================================
# OPENAI - SEPARATE STAGING KEY
# ========================================
# Use a separate API key for staging (not shared with production)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-staging-...
OPENAI_MODEL=gpt-4o-mini-2024-07-18
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# NEON DATABASE - SHARED WITH PRODUCTION
# ========================================
# Same database as production (read-only for indexing)
# Get from: Neon dashboard → Connection string
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# ========================================
# MERCEDES GRAPHQL API (LEGACY - Optional)
# ========================================
MERCEDES_GRAPHQL_URL=https://www.mercedesscientific.com/graphql

# ========================================
# FLASK CONFIGURATION
# ========================================
FLASK_ENV=staging
FLASK_PORT=5001

# ========================================
# ENVIRONMENT IDENTIFIER
# ========================================
ENVIRONMENT=staging
